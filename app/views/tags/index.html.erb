<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag, tag_path(tag), class: 'tag', id: "tag_#{tag.id}" %>
    </li>
  <% end %>
</ul>

<% if logged_in? %>
	<p><%= link_to "delete all", tags_path, method: :delete, data: {confirm: "Really delete all tags?"} %></p>
 <% end %>